{% extends "base.njk" %}

{% block title %}Bootstrap 5 Website - Home{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-4">Welcome to Our Modern Website</h1>
        <p class="lead mb-4">We create beautiful, responsive websites that help businesses grow</p>
        <a href="contact.html" class="btn btn-primary btn-lg me-2">Get Started</a>
        <a href="about.html" class="btn btn-outline-light btn-lg">Learn More</a>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Our Services</h2>
            <p class="lead">What we offer to our clients</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-laptop"></i>
                        </div>
                        <h3>Web Design</h3>
                        <p>Beautiful, modern website designs that convert visitors into customers.</p>
                        <a href="#" class="btn btn-outline-primary mt-3">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-phone"></i>
                        </div>
                        <h3>Mobile Development</h3>
                        <p>Native and cross-platform mobile applications for iOS and Android.</p>
                        <a href="#" class="btn btn-outline-primary mt-3">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h3>Digital Marketing</h3>
                        <p>Data-driven marketing strategies to grow your business online.</p>
                        <a href="#" class="btn btn-outline-primary mt-3">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2>Ready to take your business to the next level?</h2>
                <p class="lead mb-0">Contact us today for a free consultation.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="contact.html" class="btn btn-light btn-lg">Contact Us</a>
            </div>
        </div>
    </div>
</section>
{% endblock %}